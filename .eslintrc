{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended",
    "airbnb-base"
  ],
  "rules": {
    "no-plusplus": "off",
    "arrow-parens": ["error", "as-needed"],
    "linebreak-style": "off"
  },
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  }
}